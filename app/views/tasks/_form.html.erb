<%= form_with(model: task) do |f| %>
  <% if task.errors.any? %>
    <div id= "error_explanation">
      <ul>
        <% task.errors.full_messages. each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.label :status, "状況" %>
  <%= f.label :content, "タスク" %>
  
  <%= f.text_field :status %>
  <%= f.text_field :content %>
  
  <%= f.submit "編集" %>
<% end %>